---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const projects = (await getCollection("projects")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const latest_projects = projects;
---

<BaseLayout sideBarActiveItemID="home">
  <!-- Improve mobile responsiveness -->
  <style>
    /* Fix mobile padding */
    main {
      padding: 1.5rem !important;
      padding-top: 2.5rem !important;
      max-width: 100vw !important;
      overflow-x: hidden !important;
    }
    @media (min-width: 768px) {
      main {
        padding: 2rem !important;
        padding-top: 3rem !important;
      }
    }
    
    /* Prevent horizontal scroll globally */
    html, body {
      overflow-x: hidden !important;
      max-width: 100vw !important;
    }
    
    * {
      box-sizing: border-box !important;
    }
    
    /* Ensure all containers respect viewport width */
    .hero-section, .grid {
      max-width: 100% !important;
      overflow-x: hidden !important;
    }
    
    /* Fix any potential text overflow */
    .text-3xl, .text-4xl, .text-5xl {
      word-wrap: break-word !important;
      overflow-wrap: break-word !important;
    }
  </style>
  
  <!-- Hero Section with Responsive Layout -->
  <div class="hero-section pb-6 mt-2 w-full max-w-full">
    <div class="container mx-auto max-w-full">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center w-full">
      <!-- Hero Content -->
      <div class="order-2 lg:order-1 px-4 lg:px-0">
        <div class="text-lg sm:text-xl py-2 flex items-center gap-2">
          <span>Welcome to my portfolio</span>
          <span class="text-xl sm:text-2xl">üèóÔ∏è</span>
        </div>
        <div class="text-3xl sm:text-4xl md:text-5xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          I'm Mahmoud Abouarab
        </div>
        <div class="text-xl sm:text-2xl md:text-3xl py-3 font-bold text-primary">
          Civil Engineer | Structural & Planning
        </div>
        <div class="py-2">
          <text class="text-base sm:text-lg leading-relaxed">
            Professional civil engineer with expertise in <b>structural design</b> and <b>urban planning</b>. 
            I specialize in creating innovative engineering solutions for residential, commercial, and infrastructure projects 
            across Egypt. With a focus on sustainable development and modern construction practices, I deliver projects that 
            meet the highest engineering standards while optimizing cost and functionality.
          </text>
        </div>
        <div class="mt-6 flex flex-col sm:flex-row gap-3">
          <a class="btn btn-primary" href="mailto:mahmoudabouarab355@gmail.com" target="_blank">Get in Touch</a>
          <a href="/cv" class="btn btn-outline">
            View My CV
          </a>
        </div>
      </div>
      
      <!-- Hero Image -->
      <div class="order-1 lg:order-2 w-full px-4 lg:px-0">
        <div class="relative w-full max-w-sm mx-auto lg:max-w-md">
          <!-- Engineering Background Pattern -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent/5 rounded-2xl"></div>
          
          <!-- Main Image -->
          <div class="relative p-3 lg:p-4">
            <img 
              src="/profile.jpg" 
              alt="Mahmoud Abouarab - Civil Engineer" 
