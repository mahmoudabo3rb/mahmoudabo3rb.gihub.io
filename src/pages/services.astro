---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Engineering Services" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Professional Engineering Services</div>
    <div class="mb-8">
      <p class="text-lg text-gray-600">
        Comprehensive civil engineering solutions for your construction and development projects. 
        From initial planning to project completion, I provide expert engineering services tailored to your specific needs.
      </p>
    </div>
  </div>

  <HorizontalCard
    title="Structural Design & Analysis"
    img="/post_img.webp"
    desc="Complete structural engineering services including analysis, design, and detailing for residential, commercial, and industrial buildings. Expertise in reinforced concrete, steel structures, and foundation systems."
    badge="CORE SERVICE"
    url="mailto:mahmoudabouarab355@gmail.com"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Urban Planning & Development"
    img="/post_img.webp"
    desc="Comprehensive planning services for new communities, master planning, infrastructure design, and zoning analysis. Sustainable development solutions that balance environmental, social, and economic factors."
    url="mailto:mahmoudabouarab355@gmail.com"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Construction Management & Supervision"
    img="/post_img.webp"
    desc="Professional construction administration services including quality control, progress monitoring, and technical supervision. Ensuring projects meet design specifications, safety standards, and timeline requirements."
    url="mailto:mahmoudabouarab355@gmail.com"
    badge="POPULAR"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Engineering Consultation & Code Compliance"
    img="/post_img.webp"
    desc="Expert consultation on building codes, structural assessments, feasibility studies, and engineering problem-solving. Specialized support for complex engineering challenges and permit applications."
    url="mailto:mahmoudabouarab355@gmail.com"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Infrastructure Engineering"
    img="/post_img.webp"
    desc="Design and planning of infrastructure systems including utilities, transportation networks, drainage systems, and site development. Comprehensive solutions for municipal and private development projects."
    url="mailto:mahmoudabouarab355@gmail.com"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Seismic Assessment & Retrofitting"
    img="/post_img.webp"
    desc="Specialized services in earthquake engineering including seismic assessment of existing structures, retrofitting design, and seismic-resistant design for new construction projects."
    url="mailto:mahmoudabouarab355@gmail.com"
    badge="SPECIALIST"
  />
</BaseLayout>
